---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    `rounded-lg flex flex-col justify-center items-center p-4 mt-4`,
    {
      border: !isBig,
    },
  ]}
>
  <img 
    transition:name={`${name}-image`}
    class:list={[
      {
        "size-48": isBig,
        "size-20": !isBig,
      },
    ]}
    src={imageSrc}
    alt={name}
  />

  <span
    class:list={[
      "capitalize",
      {
        "text-4xl text-sky-300": isBig,
      },
    ]}>#{id} {name}</span
  >
</a>
